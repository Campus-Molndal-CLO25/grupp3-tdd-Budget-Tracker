@model BudgetTracker.Web.Models.CategoryEditViewModel

<section class="hero">
    <div class="hero__copy">
        <p class="eyebrow">Edit Category</p>
        <h1>Refine the label.</h1>
        <p class="lede">Adjust the name, type, or color for this category.</p>
    </div>
    <div class="hero__panel">
        <div class="panel-header">
            <div>
                <h2>Update Category</h2>
                <p class="muted">Changes apply to future transactions and budgets.</p>
            </div>
        </div>
        <form class="account-form" asp-action="Edit" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-grid">
                <label class="field">
                    <span>Name</span>
                    <input type="text" name="Name" value="@Model.Category.Name" required />
                </label>
                <label class="field">
                    <span>Type</span>
                    <select name="Type">
                        @if (Model.Category.Type == BudgetTracker.Core.Domain.CategoryType.Income)
                        {
                            <option value="Income" selected>Income</option>
                        }
                        else
                        {
                            <option value="Income">Income</option>
                        }
                        @if (Model.Category.Type == BudgetTracker.Core.Domain.CategoryType.Expense)
                        {
                            <option value="Expense" selected>Expense</option>
                        }
                        else
                        {
                            <option value="Expense">Expense</option>
                        }
                    </select>
                </label>
                <label class="field">
                    <span>Color</span>
                    <input type="text" name="Color" value="@Model.Category.Color" placeholder="#2f855a" />
                </label>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <p class="form-error">@Model.ErrorMessage</p>
            }
            <button class="btn-primary" type="submit">Save Changes</button>
            <a class="btn-link" asp-action="Index">Cancel</a>
        </form>
    </div>
</section>
